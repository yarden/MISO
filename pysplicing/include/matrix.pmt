    printf("\n");
  }
  
  return 0;
}

int FUNCTION(splicing_matrix,fprint)(const TYPE(splicing_matrix) *m,
				   FILE *file) {

  long int nr=FUNCTION(splicing_matrix,nrow)(m);
  long int nc=FUNCTION(splicing_matrix,ncol)(m);
  long int i, j;
  for (i=0; i<nr; i++) {
    for (j=0; j<nc; j++) {
      if (j!=0) { fputc(' ', file); }
      fprintf(file, OUT_FORMAT, MATRIX(*m, i, j));
    }
    fprintf(file, "\n");
  }
  
  return 0;
}

